datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Content {
  body      String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  image     Image?   @relation(fields: [imageId], references: [id])
  imageId   String?
  title     String?
  updatedAt DateTime @updatedAt
}

model Page {
  author    String?
  body      String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  published Boolean?
  slug      String?
  title     String?
  updatedAt DateTime @updatedAt
}

model Image {
  altText   String?
  contents  Content[]
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  updatedAt DateTime  @updatedAt
  url       String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
